<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.chetanmuliya.studentpanel.activity.TestScheduleActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="26dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="5dp"
            app:cardElevation="5dp">
            <TextView
                android:id="@+id/viewTimeTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:padding="12dp"
                android:onClick="onViewTimeTable"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/profile_background"
                android:text="View Time Table"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="26dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="5dp"
            app:cardElevation="5dp">
            <TextView
                android:id="@+id/viewTestSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:padding="12dp"
                android:onClick="onViewTestSchedule"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/profile_background"
                android:text="Test Schedule"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
