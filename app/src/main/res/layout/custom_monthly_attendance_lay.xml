<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="0dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:background="@drawable/attendance_background"
           android:layout_height="match_parent">
        <TextView
            android:id="@+id/attendanceMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="April - 18"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

           <TextView
               android:id="@+id/attendanceCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignStart="@+id/textView"
               android:layout_below="@+id/attendanceMonth"
               android:layout_marginStart="45dp"
               android:text="3"
               android:textColor="@color/white"
               android:textSize="32sp" />

           <TextView
               android:id="@+id/textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/attendanceCount"
               android:layout_marginStart="43dp"
               android:textSize="16sp"
               android:textColor="@android:color/black"
               android:text="Session Attendented" />

           <Button
               android:id="@+id/detailAttendance"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@+id/textView"
               android:background="@drawable/profile_background"
               android:padding="5dp"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="16dp"
               android:text="more details" />
       </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>