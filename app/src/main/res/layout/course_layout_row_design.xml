<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:elevation="5dp"
           app:cardCornerRadius="5dp"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp">
               <TextView
                   android:id="@+id/course_name"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:text="Classroom(English)"
                   android:textStyle="bold"
                   android:textSize="12sp"
                   android:textColor="@android:color/black"
                   android:layout_gravity="center_vertical"
                   android:padding="5dp"
                   />
               <Button
                   android:id="@+id/attendence"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:elevation="5dp"
                   android:backgroundTint="@color/bg_register"
                   android:background="@drawable/ic_attendence"
                   android:textColor="@color/white"
                   android:layout_margin="5dp"/>
               <Button
                   android:id="@+id/report"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:elevation="5dp"
                   android:drawableTint="@color/bg_register"
                   android:background="@drawable/ic_report"
                   android:textColor="@color/white"
                   android:layout_margin="5dp"/>
           </LinearLayout>
       </android.support.v7.widget.CardView>
</LinearLayout>